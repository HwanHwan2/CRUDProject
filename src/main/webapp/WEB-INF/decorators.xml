<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<!-- /WEB-INF/decorators.xml -->
<decorators defaultdir="/layout"> <!-- layout 폴더 지정 -->

	<decorator name="main" page="layout.jsp">
		<pattern>/*/*.do</pattern>
	</decorator>

	<excludes>
		<pattern>/user/entry.do</pattern> <!-- 회원가입 모달창은 레이아웃 X -->
		<pattern>/user/logout.do</pattern> <!-- 로그아웃은 레이아웃 X -->
	</excludes>
</decorators>
